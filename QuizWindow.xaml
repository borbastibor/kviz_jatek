<Window x:Class="kviz_jatek.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kviz_jatek"
        mc:Ignorable="d"
        Title="QuizWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseDown="Window_MouseDown" Activated="OnActivated">
    <Grid>
        <Button Content="Vissza a menübe" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold" Padding="5" Click="OnClick_BackToMenu"/>
        <Button Content="Következő" HorizontalAlignment="Left" Margin="20,0,0,20" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold" Padding="5" Click="OnClick_GetNext"/>
        <StackPanel Margin="20,50,20,75" RenderTransformOrigin="0.5,0.5">
			<Label Name="Kerdes" Content="Kérdés" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Left" Margin="20,5,20,0" VerticalAlignment="Top"/>
			<ListBox Width="200" HorizontalAlignment="Left" >
				<ListBoxItem Content="Passz" FontSize="14" FontWeight="Normal" HorizontalContentAlignment="Left" Margin="20,5,20,0" VerticalAlignment="Top"/>
				<ListBoxItem Content="Válasz_1" FontSize="14" FontWeight="Normal" HorizontalContentAlignment="Left" Margin="20,5,20,0" VerticalAlignment="Top"/>
				<ListBoxItem Content="Válasz_2" FontSize="14" FontWeight="Normal" HorizontalContentAlignment="Left" Margin="20,5,20,0" VerticalAlignment="Top"/>
				<ListBoxItem Content="Válasz_3" FontSize="14" FontWeight="Normal" HorizontalContentAlignment="Left" Margin="20,5,20,0" VerticalAlignment="Top"/>
			</ListBox>
			<StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.17"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.571"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
        </StackPanel>
        <Label Content="Kérdéssor" FontSize="20" FontWeight="ExtraBold" HorizontalContentAlignment="Center" Margin="20,5,20,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
